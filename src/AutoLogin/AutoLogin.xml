<?xml version="1.0" encoding="utf-8" ?>
<widget id="AutoLogin.widget.AutoLogin" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>AutoLogin</name>
    <description>The description of this widget.</description>

    <icon />

    <properties>
        <property key="fallbackMicroflow" type="microflow">
            <caption>Fallback Microflow</caption>
            <category>Behavior</category>
            <description>A microflow that navigates to another page, if there are no saved credentials, or the credentials are no good.</description>
			<returnType type="Void" />
        </property>
		<property key="loginUUIDAttribute" type="attribute">
		 	<caption>Login UUID</caption>
            <category>Behavior</category>
            <description>The attribute containing the login UUID to use.</description>
			<attributeTypes>
				<attributeType name="String" />
			</attributeTypes>
		</property>
    </properties>
</widget>

